{
    "swagger": "2.0",
    "info": {
        "description": "API para o gerenciamento de dispositivos",
        "title": "Microsserviço de Dispositivos",
        "contact": {
            "name": "Leonardo Fidelis",
            "url": "https://github.com/leofideliss"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8888",
    "paths": {
        "/limit": {
            "get": {
                "description": "Retorna uma lista com os dispositivos",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Gerenciar Dispositivos"
                ],
                "summary": "Lista todos os dispositivos",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Owner do dispositivo",
                        "name": "owner",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Limite de registros consultados",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Pagina atual consultada",
                        "name": "page",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Responde com o id do dispositivo cadastrado",
                        "schema": {
                            "$ref": "#/definitions/helper.Response"
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "Retorna o _id do dispostivo cadastrado",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Gerenciar Dispositivos"
                ],
                "summary": "Registra um dispositivo",
                "parameters": [
                    {
                        "description": "Dados do dispositivo",
                        "name": "device",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.RequestDeviceSwagger"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Responde com o id do dispositivo cadastrado",
                        "schema": {
                            "$ref": "#/definitions/helper.Response"
                        }
                    }
                }
            }
        },
        "/{id}": {
            "get": {
                "description": "Retorna as informações do dispositivo",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Gerenciar Dispositivos"
                ],
                "summary": "Consulta um dispositivo pelo Id",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID do dispositivo",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Owner do dispositivo",
                        "name": "owner",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Responde com as informações do dispositivo",
                        "schema": {
                            "$ref": "#/definitions/helper.Response"
                        }
                    }
                }
            },
            "delete": {
                "description": "Retorna se o dispositivo foi deletado",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Gerenciar Dispositivos"
                ],
                "summary": "Deleta um dispositivo",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID do dispositivo",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Owner do dispositivo",
                        "name": "owner",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Responde se o dispositivo foi deletado com sucesso",
                        "schema": {
                            "$ref": "#/definitions/helper.Response"
                        }
                    }
                }
            },
            "patch": {
                "description": "Retorna o _id do dispostivo atualizado",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Gerenciar Dispositivos"
                ],
                "summary": "Atualiza um dispositivo",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID do dispositivo",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Owner do dispositivo",
                        "name": "owner",
                        "in": "query"
                    },
                    {
                        "description": "do dispositivo",
                        "name": "device",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.RequestDeviceSwagger"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Responde com o id do dispositivo cadastrado",
                        "schema": {
                            "$ref": "#/definitions/helper.Response"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.RequestDeviceSwagger": {
            "description": "Modelo que representa um dispositivo",
            "type": "object",
            "properties": {
                "deviceId": {
                    "type": "string"
                },
                "expire_at": {
                    "type": "string",
                    "example": "2024-12-03T12:15:20Z"
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": {}
                },
                "owner": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "helper.Response": {
            "type": "object",
            "properties": {
                "data": {},
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
    }
}